{
  "name": "@promptg/spec",
  "version": "1.0.1",
  "description": "PromptG open specification + JSON Schemas for prompts, templates, and prompt packs (the companion standard to the @promptg/cli ecosystem).",
  "type": "module",
  "engines": {
    "node": ">=20.12.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run format:check && npm test",
    "validate:schemas": "node scripts/validate-schemas.js",
    "validate:examples": "node scripts/validate-examples.js",
    "test:conformance": "node scripts/test-conformance.js",
    "test:semantics": "node scripts/test-semantics.js",
    "test:encoding": "node scripts/test-encoding.js",
    "test": "npm run validate:schemas && npm run validate:examples && npm run test:conformance && npm run test:semantics && npm run test:encoding",
    "prepack": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptg/spec.git"
  },
  "keywords": [
    "promptg",
    "prompt",
    "prompts",
    "rag",
    "agentic",
    "developer-tools",
    "cli",
    "llm",
    "ai",
    "generative-ai",
    "genai",
    "gpt",
    "openai",
    "chatgpt",
    "anthropic",
    "claude",
    "gemini",
    "ollama",
    "automation",
    "devops",
    "workflow",
    "ai-sdk",
    "mcp",
    "model-context-protocol",
    "function-calling",
    "prompt-engineering",
    "prompt-management",
    "prompt-template",
    "prompt-chaining",
    "prompts-as-code",
    "llmops",
    "agents",
    "ai-agents"
  ],
  "author": "Steve Papa <steve@promptg.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/promptg/spec/issues"
  },
  "homepage": "https://promptg.io",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "glob": "^10.3.10",
    "prettier": "^3.7.4"
  },
  "files": [
    "spec/",
    "schemas/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
